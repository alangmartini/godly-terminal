{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "Godly Terminal",
  "version": "0.3.0",
  "identifier": "com.godly.terminal",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run unlock -- --release && cd src-tauri && cargo build -p godly-daemon -p godly-mcp -p godly-notify --release && cd .. && npm run build:check",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Godly Terminal",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "dragDropEnabled": true,
        "additionalBrowserArgs": "--disable-features=msWebOOUI,msPdfOOUI,msSmartScreenProtection --remote-debugging-port=9222"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.ico"],
    "windows": {
      "nsis": {
        "installerHooks": "nsis-hooks.nsh"
      }
    },
    "resources": {
      "target/release/godly-daemon.exe": "./",
      "target/release/godly-mcp.exe": "./",
      "target/release/godly-notify.exe": "./",
      "sounds/*": "sounds/"
    }
  },
  "plugins": {}
}
