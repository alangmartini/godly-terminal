{
  "name": "godly-terminal",
  "version": "0.1.0",
  "private": true,
  "license": "BUSL-1.1",
  "type": "module",
  "scripts": {
    "dev": "npm run build:daemon && npm run build:mcp && vite",
    "dev:test": "cross-env GODLY_INSTANCE=test npx tauri dev --config src-tauri/tauri.conf.test.json",
    "build": "tsc && vite build",
    "build:daemon": "cd src-tauri && cargo build -p godly-daemon",
    "build:daemon:release": "cd src-tauri && cargo build -p godly-daemon --release",
    "build:mcp": "cd src-tauri && cargo build -p godly-mcp",
    "build:mcp:release": "cd src-tauri && cargo build -p godly-mcp --release",
    "preview": "vite preview",
    "tauri": "tauri",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:rust": "cd src-tauri && cargo test --workspace",
    "test:e2e": "wdio run e2e/wdio.conf.ts",
    "test:e2e:no-build": "cross-env SKIP_BUILD=1 wdio run e2e/wdio.conf.ts",
    "test:all": "npm run test && npm run test:rust && npm run test:e2e",
    "check:persistence": "npx ts-node e2e/check-persistence.ts"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.0.0",
    "@tauri-apps/plugin-dialog": "^2.0.0",
    "@tauri-apps/plugin-notification": "^2.0.0",
    "@tauri-apps/plugin-opener": "^2.5.3",
    "@tauri-apps/plugin-store": "^2.0.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-serialize": "^0.13.0",
    "@xterm/addon-web-links": "^0.11.0",
    "@xterm/xterm": "^5.5.0"
  },
  "devDependencies": {
    "@crabnebula/tauri-driver": "^2.0.8",
    "@tauri-apps/cli": "^2.0.0",
    "@wdio/cli": "^9.23.3",
    "@wdio/local-runner": "^9.23.3",
    "@wdio/mocha-framework": "^9.23.3",
    "@wdio/spec-reporter": "^9.23.3",
    "@xterm/headless": "^6.0.0",
    "cross-env": "^10.1.0",
    "edgedriver": "^6.3.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^2.0.0"
  }
}
